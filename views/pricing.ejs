<%- include("partials/navbar") %>
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/pricing.css">


    <div class="page-content">

        <div class="pricing-container">
            <h1 class="pricing-title">Choose Your Plan</h1>
            <div class="plans">
                <!-- Free Plan -->
                <div class="plan card">
                    <h2>Free</h2>
                    <p class="price">₹0 / month</p>
                    <ul>
                        <li>Limited AI Chat (50 credits/month)</li>
                        <li>Limited feature access</li>
                        <li>Platform fee on therapist appointments</li>
                        <li>Email support</li>
                    </ul>
                    <button class="btn">Get Started</button>
                </div>

                <!-- Pro Plan -->
                <div class="plan card popular">
                    <h2>Pro</h2>
                    <p class="price">₹499 / month</p>
                    <ul>
                        <li>Unlimited AI Chat</li>
                        <li>No platform fee on therapist appointments</li>
                        <li>Access to personal features (mood tracking, personalized suggestions)</li>
                        <li>Priority email support</li>
                    </ul>
                    <button class="btn">Upgrade Now</button>
                </div>

                <!-- Pro Max Plan -->
                <div class="plan card">
                    <h2>Pro Max</h2>
                    <p class="price">₹999 / month</p>
                    <ul>
                        <li>All Pro features</li>
                        <li>Personalized mental wellness plan</li>
                        <li>Access to all content without limits</li>
                        <li>1-on-1 therapist consultation perks</li>
                        <li>Priority support & monthly check-ins</li>
                    </ul>
                    <button class="btn">Go Pro Max</button>
                </div>
            </div>
        </div>
    </div>